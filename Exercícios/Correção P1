3a)
#include<stdio.h>
#include<math.h>

using namespace std;

int main ()
{
    double F, C;

    printf("\n\nTemperatura em Fahrenheit: ");
    scanf("%lf", &F);

    C = (F - 32.0) * (5.0/9.0);

    printf("\n\nTemperatura em Celcius : %lf ", C);
}


3b)
#include<stdio.h>
#include<math.h>

using namespace std;

int main ()
{
    int F, C;

    printf("\n\nTemperatura em Fahrenheit: ");
    scanf("%d", &F);

    C = (F - 32) * (5/9);

    printf("\n\nTemperatura em Celcius : %d ", C);
}


Resultado 3a)

Temperatura em Fahrenheit: 28


Temperatura em Celcius : -2.222222

Resultado 3b)

Temperatura em Fahrenheit: 28


Temperatura em Celcius : 0



4)

#include <stdio.h>

int main() {
    float temperatura;

    // Solicita ao usuário que insira a temperatura atual em graus Celsius
    printf("Insira a temperatura atual em graus Celsius: ");
    scanf("%f", &temperatura);

    // Avalia a temperatura e exibe a previsão do tempo correspondente
    if (temperatura <= 0) {
        printf("Geleira - Temperatura muito fria!\n");
    } else if (temperatura >= 1 && temperatura <= 15) {
        printf("Frio - Pode precisar de um casaco!\n");
    } else if (temperatura >= 16 && temperatura <= 25) {
        printf("Agradável - Tempo bom para sair!\n");
    } else if (temperatura >= 26 && temperatura <= 35) {
        printf("Quente - Ótimo para um dia de praia!\n");
    } else {
        printf("Muito quente - Mantenha-se hidratado!\n");
    }

    return 0;
}


5)

#include <stdio.h>

int main() {
    float temperatura;

    // Solicita ao usuário que insira a temperatura atual do depósito
    printf("Insira a temperatura atual do depósito em graus Celsius: ");
    scanf("%f", &temperatura);

    // Avalia a temperatura e classifica o nível de risco para os alimentos
    if (temperatura < -10) {
        printf("Risco Baixo - Armazenamento ideal para alimentos congelados.\n");
    } else if (temperatura >= -10 && temperatura <= 0) {
        printf("Risco Moderado - Condições aceitáveis para armazenamento refrigerado.\n");
    } else if ((temperatura >= 1 && temperatura <= 10) || temperatura == 15) {
        printf("Risco Elevado - Monitore a temperatura.\n");
    } else if (temperatura > 10 && temperatura != 15) {
        printf("Risco Crítico - Ação Imediata Necessária!\n");
    }

    return 0;
}
